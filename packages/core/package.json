{
  "name": "@billsdk/core",
  "version": "0.3.1",
  "description": "Core infrastructure for BillSDK plugins",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "decker",
    "url": "https://github.com/decker-dev"
  },
  "homepage": "https://github.com/commet-labs/billsdk/tree/main/packages/core#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commet-labs/billsdk.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/commet-labs/billsdk/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "default": "./dist/api/index.js"
    },
    "./error": {
      "types": "./dist/error/index.d.ts",
      "default": "./dist/error/index.js"
    },
    "./db": {
      "types": "./dist/db/schema.d.ts",
      "default": "./dist/db/schema.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "api": [
        "./dist/api/index.d.ts"
      ],
      "error": [
        "./dist/error/index.d.ts"
      ],
      "db": [
        "./dist/db/schema.d.ts"
      ],
      "types": [
        "./dist/types/index.d.ts"
      ]
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "clean": "rm -rf dist .turbo .node_modules"
  },
  "dependencies": {
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "22.15.29",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "keywords": [
    "billing",
    "sdk",
    "saas",
    "plugins",
    "typescript",
    "core",
    "infrastructure"
  ]
}
