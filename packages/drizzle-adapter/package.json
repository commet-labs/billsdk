    "clean": "rm -rf dist .turbo node_modules"
  },
  "peerDependencies": {
    "@billsdk/core": "workspace:*",
    "drizzle-orm": ">=0.41.0"
  },
  "devDependencies": {
    "@billsdk/core": "workspace:*",
    "@biomejs/biome": "2.3.11",
    "@types/node": "22.15.29",
    "drizzle-orm": "0.45.1",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "keywords": [
    "billing",
    "sdk",
    "drizzle",
    "drizzle-orm",
    "orm",
    "adapter",
    "database",
    "postgres",
    "mysql",
    "sqlite"
  ]
