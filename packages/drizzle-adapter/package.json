{
  "name": "@billsdk/drizzle-adapter",
  "version": "1.0.0",
  "description": "Drizzle ORM adapter for BillSDK",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "decker",
    "url": "https://github.com/decker-dev"
  },
  "homepage": "https://github.com/commet-labs/billsdk/tree/main/packages/drizzle-adapter#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commet-labs/billsdk.git",
    "directory": "packages/drizzle-adapter"
  },
  "bugs": {
    "url": "https://github.com/commet-labs/billsdk/issues"
  },
  "engines": {
    "node": ">=20"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
