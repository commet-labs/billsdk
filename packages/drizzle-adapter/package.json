{
  "name": "@billsdk/drizzle-adapter",
  "version": "0.1.0",
  "description": "Drizzle ORM adapter for BillSDK",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "peerDependencies": {
    "@billsdk/core": "workspace:*",
    "drizzle-orm": ">=0.41.0"
  },
  "devDependencies": {
    "@billsdk/core": "workspace:*",
    "@biomejs/biome": "2.3.11",
    "@types/node": "22.15.29",
    "drizzle-orm": "0.45.1",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "keywords": [
    "billing",
    "sdk",
    "drizzle",
    "orm",
    "adapter",
    "database"
  ]
}
