{
  "name": "billsdk",
  "version": "0.1.0",
  "description": "The billing SDK for SaaS applications",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./react": {
      "types": "./dist/client/react/index.d.ts",
      "default": "./dist/client/react/index.js"
    },
    "./adapters/drizzle": {
      "types": "./dist/adapters/drizzle/index.d.ts",
      "default": "./dist/adapters/drizzle/index.js"
    },
    "./adapters/payment": {
      "types": "./dist/adapters/payment/index.d.ts",
      "default": "./dist/adapters/payment/index.js"
    },
    "./next": {
      "types": "./dist/integrations/next.d.ts",
      "default": "./dist/integrations/next.js"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client/index.d.ts"
      ],
      "react": [
        "./dist/client/react/index.d.ts"
      ],
      "adapters/drizzle": [
        "./dist/adapters/drizzle/index.d.ts"
      ],
      "adapters/payment": [
        "./dist/adapters/payment/index.d.ts"
      ],
      "next": [
        "./dist/integrations/next.d.ts"
      ]
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "clean": "rm -rf dist .turbo .node_modules"
  },
  "dependencies": {
    "@billsdk/core": "workspace:*",
    "defu": "6.1.4",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "22.15.29",
    "@types/react": "^19.0.0",
    "drizzle-orm": "0.45.1",
    "react": "^19.0.0",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.41.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "billing",
    "sdk",
    "saas",
    "subscriptions",
    "payments",
    "typescript"
  ]
}
