{
  "name": "billsdk",
  "version": "0.1.5",
  "description": "The billing SDK for SaaS applications",
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "decker",
    "url": "https://github.com/decker-dev"
  },
  "homepage": "https://github.com/commet-labs/billsdk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commet-labs/billsdk.git",
    "directory": "packages/billsdk"
  },
  "bugs": {
    "url": "https://github.com/commet-labs/billsdk/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/commet-labs"
  },
  "engines": {
    "node": ">=20"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./react": {
      "types": "./dist/client/react/index.d.ts",
      "default": "./dist/client/react/index.js"
    },
    "./adapters/drizzle": {
      "types": "./dist/adapters/drizzle/index.d.ts",
      "default": "./dist/adapters/drizzle/index.js"
    },
    "./adapters/memory": {
      "types": "./dist/adapters/memory-adapter/index.d.ts",
      "default": "./dist/adapters/memory-adapter/index.js"
    },
    "./adapters/payment": {
      "types": "./dist/adapters/payment/index.d.ts",
      "default": "./dist/adapters/payment/index.js"
    },
    "./next": {
      "types": "./dist/integrations/next.d.ts",
      "default": "./dist/integrations/next.js"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client/index.d.ts"
      ],
      "react": [
        "./dist/client/react/index.d.ts"
      ],
      "adapters/drizzle": [
        "./dist/adapters/drizzle/index.d.ts"
      ],
      "adapters/memory": [
        "./dist/adapters/memory-adapter/index.d.ts"
      ],
      "adapters/payment": [
        "./dist/adapters/payment/index.d.ts"
      ],
      "next": [
        "./dist/integrations/next.d.ts"
      ]
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "clean": "rm -rf dist .turbo .node_modules"
  },
  "dependencies": {
    "@billsdk/core": "workspace:*",
    "@billsdk/drizzle-adapter": "workspace:*",
    "@billsdk/memory-adapter": "workspace:*",
    "@billsdk/payment-adapter": "workspace:*",
    "defu": "6.1.4",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "22.15.29",
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "billing",
    "sdk",
    "saas",
    "subscriptions",
    "payments",
    "typescript",
    "stripe",
    "metered-billing",
    "usage-based"
  ]
}
