{
  "name": "billsdk-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=./packages/*",
    "dev": "turbo dev --filter=./packages/*",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "release": "bumpp",
    "release:canary": "bumpp --preid canary",
    "release:beta": "bumpp --preid beta",
    "bump": "bumpp"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "bumpp": "^10.4.0",
    "tinyglobby": "^0.2.15",
    "turbo": "2.7.5",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "demo/*"
  ]
}
